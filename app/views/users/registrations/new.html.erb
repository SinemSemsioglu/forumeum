<% page_header "Sign up" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  
  <div class = "log-link">
	Already signed up? <%= render "users/shared/links" %>
  </div>
  
  </br>
  <h3> Company Information </h3>
  <div class="field">
    <%= f.label :company_name %><br />
    <%= f.text_field :company_name, autocomplete: "off" %>
  </div>
  
  <div class="field">
    <%= f.label :company_type %><br />
    <%= f.text_field :company_type, autocomplete: "off" %>
  </div>
  
   <div class="field check">
    <%= f.label :user_type %>
    <%= f.check_box :user_type, autocomplete: "off" %>
  </div>
  
  </br> 
  
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autocomplete: "off" %>
  </div>
  
  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country, autocomplete: "off" %>
  </div>
  
  <div class="field">
    <%= f.label :language %><br />
    <%= f.text_field :language, autocomplete: "off" %>
  </div>
  
  <div class="field">
    <%= f.label :industry %><br />
    <%= f.text_field :industry, autocomplete: "off" %>
  </div>
  
  <div class="field">
    <%= f.label :year_founded %><br />
    <%= f.number_field :year_founded, autocomplete: "off" %>
  </div>
  
  <div class="field check">
    <%= f.label :international %> trade?
    <%= f.check_box :international, autocomplete: "off" %>
  </div>
  
  </br>
	
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

</br>


